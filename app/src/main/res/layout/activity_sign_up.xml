<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#fcfdd0"
        >
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/b"/>
        <androidx.cardview.widget.CardView
            android:layout_width="380dp"
            android:layout_height="700dp"
            android:layout_gravity="center"
            app:cardCornerRadius="20dp"
            android:elevation="0dp"
            app:cardBackgroundColor="@color/cardview_light_background"
            android:layout_margin="2dp"
            android:layout_marginTop="30dp"
            android:clipToPadding="true"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REGISTER"
                android:textSize="30dp"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="start"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="120dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textColor="@color/colorAccent"
                android:textSize="15dp"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="25dp"

                />
            <Spinner
                android:id="@+id/sp1"
                android:layout_width="240dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="60dp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:layout_marginTop="125dp"
                android:layout_marginLeft="25dp"
                android:textColor="@color/colorAccent"
                android:textSize="15dp"
                />
            <EditText
                android:id="@+id/name"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="130dp"
                android:layout_marginLeft="40dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mailid"
                android:layout_marginTop="190dp"
                android:layout_marginLeft="25dp"
                android:textColor="@color/colorAccent"
                android:textSize="15dp"
                />
            <EditText
                android:id="@+id/mail"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="200dp"
                android:layout_marginLeft="40dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone no"
                android:layout_marginTop="260dp"
                android:layout_marginLeft="25dp"
                android:textColor="@color/colorAccent"
                android:textSize="15dp"
                />
            <EditText
                android:id="@+id/phone"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="270dp"
                android:layout_marginLeft="40dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:layout_marginTop="330dp"
                android:layout_marginLeft="25dp"
                android:textColor="@color/colorAccent"
                android:textSize="15dp"
                />
            <EditText
                android:id="@+id/password"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="340dp"
                android:layout_marginLeft="40dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:layout_marginTop="400dp"
                android:layout_marginLeft="25dp"
                android:textColor="@color/colorAccent"
                android:textSize="15dp"
                />
            <EditText
                android:id="@+id/address"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="410dp"
                android:layout_marginLeft="40dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="State"
                android:layout_marginTop="470dp"
                android:layout_marginLeft="25dp"
                android:textColor="@color/colorAccent"
                android:textSize="15dp"
                />
            <EditText
                android:id="@+id/state"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="480dp"
                android:layout_marginLeft="40dp"/>
            <TextView
                android:id="@+id/proof1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Id/Documevt proof"
                android:layout_marginTop="550dp"
                android:layout_marginLeft="25dp"
                android:textColor="@color/colorAccent"
                android:textSize="15dp"
                />

            <ImageButton
                android:id="@+id/proof"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="550dp"
                android:onClick="FolderSave"
                android:src="@drawable/file" />
            <Button
                android:id="@+id/regis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register"
                android:onClick="OnSignUpTapped"
                android:layout_marginTop="600dp"
                android:layout_marginLeft="150dp"
                android:background="@color/colorPrimary"
                android:textColor="#ffff"
                />

            <TextView
                android:id="@+id/sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="670dp"
                android:onClick="OnSignInTapped"
                android:selectAllOnFocus="true"
                android:text="Already a User?Sign in here"
                android:textColor="@color/colorAccent"
                android:textSize="15dp"

                />
            <ImageView
                android:id="@+id/alert"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/alert"
                android:layout_marginTop="550dp"
                android:layout_marginLeft="250dp"
                android:visibility="invisible"
                />
            <ProgressBar
                android:id="@+id/save"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="240dp"
                android:layout_marginLeft="150dp"
                android:visibility="invisible"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>